<%= form_for(@bookmark) do |f| %>
<% if @bookmark.errors.any? %>
	<div id="text-error">
		<h2><%= pluralize(@bookmark.errors.count, "error") %> prohibited this bookmark from being saved:</h2>
		<ul>
		<% @bookmark.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
<% end %>
	<fieldset>
		<legend>Fill in the following details</legend>
		<%= f.fields_for(:web_page) do |wp| %>
		<div style="margin-bottom: 10px;">
			<%= wp.label :url %>
			<%= wp.text_field :url, :class => 'input-block-level' %>        
		</div>
		<% end %>
		<div style="margin-bottom: 10px;">
			<%= f.label :name %>
    		<%= f.text_field :name %>                        
		</div>
		<div style="margin-bottom: 10px;">
			<%= f.label :notes %>
    		<%= f.text_area :notes, :rows => '3' %>            
		</div>                						
	</fieldset>	
  <div class="actions">
    <%= f.submit 'Add', :class => 'btn btn-success' %>
  </div>
<% end %>
